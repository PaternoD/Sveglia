<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/place_autocomplete_separator">

    <ImageView
        android:id="@+id/blurImageView_ID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/full_screen_image_for_layout_1" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_time_alarm_notificatino_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/card_snooze_notification_ID"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="100dp"
                android:fontFamily="@font/fira_sans_light"
                android:text="TIME"
                android:textColor="@android:color/white"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/text_alarm_name_notification_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/card_snooze_notification_ID"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="80dp"
                android:text="Alarm Name"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_snooze_notification_ID"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="visible"
                app:cardBackgroundColor="@color/Notification_Background_Button"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView_snooze_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6dp"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        app:srcCompat="@drawable/alarm_snooze" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/fira_sans_light"
                        android:text="Snooze"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_delete_notification_ID"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/card_snooze_notification_ID"
                android:layout_below="@+id/card_snooze_notification_ID"
                android:layout_marginTop="25dp"
                app:cardBackgroundColor="@color/Notification_Background_Button"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView_delete_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6dp"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        app:srcCompat="@drawable/alarm_off" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/fira_sans_light"
                        android:text="Delete"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>