<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#801b1b1b">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_TimePickerGoogle_ID"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@color/CardDefaultColor"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:id="@+id/RelativeLayout_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TimePicker
                android:id="@+id/timePicker_google_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/line_top_date"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/timePicker_google_ID"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:background="@color/cardview_dark_background">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/line_top_date"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/line_bottom_date"
                    android:layout_marginBottom="6dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@color/CircleRepetitionAlarm"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp">

                    <Button
                        android:id="@+id/btn_cancel_time_google_ID"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/line_bottom_date"
                        android:background="@android:color/transparent"
                        android:elevation="0dp"
                        android:fontFamily="@font/fira_sans_light"
                        android:stateListAnimator="@null"
                        android:text="Annulla"
                        android:textColor="@color/DefaultColorText"
                        android:textSize="15sp" />
                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:id="@+id/line_bottom_date"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/datePicker_text_ID"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/cardview_dark_background">

                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/line_bottom_date"
                    android:layout_marginBottom="6dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@color/CircleRepetitionAlarm"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp">

                    <Button
                        android:id="@+id/btn_save_time_google_ID"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/line_bottom_date"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/fira_sans_light"
                        android:stateListAnimator="@null"
                        android:text="Salva"
                        android:textColor="@color/DefaultColorText"
                        android:textSize="15sp" />
                </android.support.v7.widget.CardView>

                <ImageView
                    android:id="@+id/calendar_ImageView_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="8dp"
                    android:layout_toStartOf="@+id/datePicker_text_ID"
                    app:srcCompat="@drawable/icons8_calendar_24" />

                <TextView
                    android:id="@+id/datePicker_text_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/fira_sans_light"
                    android:text="DatePicker"
                    android:textSize="18sp" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Relative_Layout_Date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <DatePicker
                android:id="@+id/datePicker_google_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:datePickerMode="calendar"
                android:headerBackground="@color/DefaultMapsSearch"
                android:headerDayOfMonthTextAppearance="@style/TextAppearance.AppCompat.Body2"
                android:headerMonthTextAppearance="@style/TextAppearance.AppCompat.Body2"
                android:theme="@style/DatepickerStyle" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/datePicker_google_ID"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="12dp"
                app:cardBackgroundColor="@color/CircleRepetitionAlarm"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp">

                <Button
                    android:id="@+id/btn_cancel_date_google_ID"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/datePicker_google_ID"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/fira_sans_light"
                    android:stateListAnimator="@null"
                    android:text="Annulla"
                    android:textColor="@color/DefaultColorText"
                    android:textSize="15sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/datePicker_google_ID"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/CircleRepetitionAlarm"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp">

                <Button
                    android:id="@+id/btn_save_date_google_ID"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/datePicker_google_ID"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/fira_sans_light"
                    android:stateListAnimator="@null"
                    android:text="OK"
                    android:textColor="@color/DefaultColorText"
                    android:textSize="15sp" />
            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>