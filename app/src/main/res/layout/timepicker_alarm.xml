<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#801b1b1b">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewTimePickerAlarm_ID"
        android:layout_width="300dp"
        android:layout_height="430dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TimePicker
                android:id="@+id/timePicker_Alarm_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:headerBackground="@android:color/darker_gray"
                android:timePickerMode="clock" />

            <Button
                android:id="@+id/btn_save_timePicker_ID"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ripple_effect_transparent"
                android:elevation="0dp"
                android:fontFamily="@font/fira_sans_light"
                android:stateListAnimator="@null"
                android:text="Salva"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_cancel_timePicker_ID"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/ripple_effect_transparent"
                android:elevation="0dp"
                android:fontFamily="@font/fira_sans_light"
                android:text="Annulla"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="15sp"
                android:textStyle="bold"
                android:stateListAnimator="@null"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>