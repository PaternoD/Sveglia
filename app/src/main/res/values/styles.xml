<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Add_Alarm Style -->
    <style name="Add_Alarm" >
        <!-- Item da aggiungere per cambiare il colore della status bar -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Maps Style -->
    <style name="Maps_Activity" >
        <!-- Item da aggiungere per cambiare il colore della status bar -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Default_ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/ActionBar_Text_Style</item>
        <item name="android:background">@color/statusBarColor</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="ActionBar_Text_Style" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:textColor">@color/White</item>
    </style>

    <!-- TimePicker_Alarm Style -->
    <style name="TimePicker_Alarm">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:fontFamily">@font/fira_sans_light</item>
    </style>

    <!-- Add_Repetitions Style -->
    <style name="Add_Repetitions">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- TimePicker_Google -->
    <style name="TimePicker_Google">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:fontFamily">@font/fira_sans_light</item>
    </style>

    <!-- Notification -->
    <style name="Notification_Style">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- FullScreen Notification -->
    <style name="FullScreen_Notification">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- No Internet Connection -->
    <style name="NoInternetConnection_Style">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <!-- Style for Switch button -->
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/CircleRepetitionAlarm</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#b3b3b3</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#3e3e3e</item>
    </style>

</resources>
